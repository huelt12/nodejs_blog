{{#if authenticated}}
<h4 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Đơn hàng đã mua</span></h4>
            <div class="col-lg-12 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover  mb-0">
                    <thead class="text-center">
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Thành tiền</th>
                            <th>Người nhận hàng</th>
                            <th>Số điện thoại</th>
                            <th>Địa chỉ nhận hàng</th>
                            <th>Đã giao hàng</th>
                        </tr> 
                    </thead>
                    {{#each orders}} 
                    <tbody class="align-middle">
                        <tr>
                            <td class="align-middle"><img src="{{course.image}}" alt="" style="width: 50px;">{{course.name}}</td>
                            <td class="align-middle text-center">{{course.gia}}</td>                            
                            <td class="align-middle">{{this.fullName}}</td>
                            <td class="align-middle text-center">{{this.phone}}</td>
                            <td class="align-middle">{{this.specificAddress}}</td>
                            <td class="align-middle text-center" ><span class="green-check"></span></td>
                            <style>
                                .green-check::before {
                                    content: "\2714"; /* Mã Unicode của dấu tích xanh */
                                    color: #00FF00; /* Màu xanh */
                                    font-size: 24px; /* Kích thước font */
                                    margin-right: 10px; /* Khoảng cách với nội dung khác (tuỳ chọn) */
                                }
                            </style>
                        </tr>                       
                    </tbody>
                    {{/each}}
                </table>
            </div>
{{/if}}