<script>
    // Lấy URL hiện tại của trang
    var currentURL = window.location.href;
    
    // Tạo một biến để lưu trữ giá trị của {{this.slug}} từ URL
    var slug = currentURL.split("/").pop();

    // Kiểm tra xem URL có khớp với http://localhost:3000/bookfree/detail/{{this.slug}} không
    if (currentURL.indexOf("http://localhost:3000/bookfree/detail/") !== -1) {
        // Kiểm tra giá trị của slug
        if (slug === "your-slug-value-here") { // Thay thế "your-slug-value-here" bằng giá trị slug bạn muốn kiểm tra
            // Đặt lớp CSS cho phần header
            var header = document.querySelector(".header");
            if (header) {
                header.classList.add("hidden");
            }
        }
    }
</script>
